service cloud.firestore {
  match /databases/{database}/documents {
    // Mensajes:
    // - Cualquiera puede leer.
    // - Los usuarios autentificados pueden a침adir y editar mensajes.
    // - Validaci칩n: Comprobar que el nombre es el mismo que el auth token y que la longitud del texto es inferior a 300 caracteres o que imageUrl es una URL.
    // - Los borrados no est치n permitidos.
    match /messages/{messageId} {
      allow read;
      allow create, update: if request.auth != null
                    && request.resource.data.name == request.auth.token.name
                    && (request.resource.data.text is string
                      && request.resource.data.text.size() <= 300
                      || request.resource.data.imageUrl is string
                      && request.resource.data.imageUrl.matches('https?://.*'));
      allow delete: if false;
    }
    // Fichas FCM:
    // - Cualquiera puede escribir su token.
    // - La lectura de la lista de tokens no est치 permitida.
    match /fcmTokens/{token} {
      allow read: if false;
      allow write;
    }
  }
}
